    {
        t := a;
        a = b;
        b += t;
    }
    return a;
}
*/

fibo2 :: (x : s64) : s64
{
    a := 0;
    b := 1;
    while (x > 0)
    {
        t := a;
        a = b;
        b += t;
        x -= 1;
    }
    return a;
}


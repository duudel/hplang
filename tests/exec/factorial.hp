// Factorial sample code
// 2016-04-25

import ":io";

factorial :: (n : s64) : s64
{
    if n <= 1  return 1;
    return n * factorial(n - 1);
}

print_factorial :: (n : s64)
{
    print("factorial(");
    print(n);
    print(") = ");
    print(factorial(n));
    println();
}

main :: ()
{
    print_factorial(1);     // = 1
    print_factorial(2);     // = 2
    print_factorial(5);     // = 120
    print_factorial(6);     // = 720
    print_factorial(12);    // = 479001600
    return 0;
}

import ":io";

pi := 3.141592653589793d;
solar_mass := 4.0d * pi * pi;
days_per_year := 365.24;

Body :: struct
{
    x : f64; y : f64; z : f64;
    vx : f64; vy : f64; vz : f64;
    mass : f64;
}

advance :: (body_count : s64, bodies : Body*, dt : f64) : void
{
    for (i : s64 = 0; i < body_count; i += 1)
    {
        b1 := &bodies[i];
        for (j := i + 1; j < body_count; j += 1)
        {
            b2 := &bodies[j];
            dx := b1.x - b2.x;
            print("dx= "); println(dx);
            dy := b1.y - b2.y;
            dz := b1.z - b2.z;
            distance := sqrt(dx*dx + dy*dy + dz*dz);
            //print("d= "); println(distance, 9);
            mag := dt / (distance * distance * distance);

            b1.vx -= dx * b2.mass * mag;
            b1.vy -= dy * b2.mass * mag;
            b1.vz -= dz * b2.mass * mag;
            b2.vx += dx * b1.mass * mag;
            b2.vy += dy * b1.mass * mag;
            b2.vz += dz * b1.mass * mag;
            //print("body "); print(i); print(" b2.vz = "); println(b2.vz);
        }
    }
    for (i : s64 = 0; i < body_count; i += 1)
    {
        //b := &bodies[i];
        //b.x += dt * b.vx;
        //b.y += dt * b.vy;
        //b.z += dt * b.vz;
        bodies[i].x += dt * bodies[i].vx;
        bodies[i].y += dt * bodies[i].vy;
        bodies[i].z += dt * bodies[i].vz;
        //print("body "); print(i); print(" b.z = "); println(bodies[i].z);
    }
}

advance_ :: (body_count : s64, bodies : Body*, dt : f64) : void
{
    for (i : s64 = 0; i < body_count; i += 1)
    {
        for (j := i + 1; j < body_count; j += 1)
        {
            dx := bodies[i].x - bodies[j].x;
            print("dx= "); println(dx);
            dy := bodies[i].y - bodies[j].y;
            dz := bodies[i].z - bodies[j].z;
            distance := sqrt(dx*dx + dy*dy + dz*dz);
            //print("d= "); println(distance, 9);
            mag := dt / (distance * distance * distance);

            bodies[i].vx -= dx * bodies[j].mass * mag;
            bodies[i].vy -= dy * bodies[j].mass * mag;
            bodies[i].vz -= dz * bodies[j].mass * mag;
            bodies[j].vx += dx * bodies[i].mass * mag;
            bodies[j].vy += dy * bodies[i].mass * mag;
            bodies[j].vz += dz * bodies[i].mass * mag;
        }
    }
    for (i : s64 = 0; i < body_count; i += 1)
    {
        bodies[i].x += dt * bodies[i].vx;
        bodies[i].y += dt * bodies[i].vy;
        bodies[i].z += dt * bodies[i].vz;
        //print("body "); print(i); print(" b.z = "); println(bodies[i].z);
    }
}

energy :: (body_count : s64, bodies : Body*) : f64
{
    result := 0.0d;

    for (i : s64 = 0; i < body_count; i += 1)
    {
        b1 := bodies[i];
        vv := (b1.vx*b1.vx + b1.vy*b1.vy + b1.vz*b1.vz);
        //print(vv);
        //println();
        result += 0.5d * b1.mass * vv;
        for (j := i + 1; j < body_count; j += 1)
        {
            b2 := bodies[j];
            dx := b1.x - b2.x;
            dy := b1.y - b2.y;
            dz := b1.z - b2.z;
            distance := sqrt(dx*dx + dy*dy + dz*dz);
            //print("d="); print(distance); println();
            r := (b1.mass * b2.mass) / distance;
            //print("r="); print(r); println();
            result -= r;
        }
    }
    return result;
}

offset_momentum :: (body_count : s64, bodies : Body*) : void
{
    px : f64 = 0.0d;
    py : f64 = 0.0d;
    pz : f64 = 0.0d;
    for (i : s64 = 0; i < body_count; i += 1)
    {
        px += bodies[i].vx * bodies[i].mass;
        py += bodies[i].vy * bodies[i].mass;
        pz += bodies[i].vz * bodies[i].mass;
    }
    bodies[0].vx = -px / solar_mass;
    bodies[0].vy = -py / solar_mass;
    bodies[0].vz = -pz / solar_mass;
}


import ":il";

factorial :: (n : s68) : s64
{
    if n <= 1  return 1;
    return n * factorial(n - 1);
}

print_factorial :: (n : s64)
{
    print("factorial(");
    print(n);
    print(") = ");
    print(factorial(n));
    println();
}


// Using function as a variable
// 2016-05-13

func :: (a : s32, b : f32) : bool
{
    if b < 0.0f  return false;
    return a > 0;
}

//TODO: implement function type syntax

call_f :: (f : !(s32, f32) : bool, a : s32, b : f32) : bool
{
    return f(a, b);
}



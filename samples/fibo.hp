foreign { hp_write :: (size : s64, data : u8*) : s64; }
print :: (str : string) { return hp_write(str.size, str.data -> u8*); }

// Recursive Fibonacci function
fibo :: (x : s64) : s64
{
    //assert(x >= 0);
    if x == 0   return 0;
    if x == 1   return 1;
    return fibo(x - 1) + fibo(x - 2);
}

